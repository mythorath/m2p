# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/m2p_db

# SocketIO Configuration
SOCKETIO_URL=http://localhost:3000

# Pool Polling Configuration
POLL_INTERVAL_SECONDS=60
POOL_REQUEST_TIMEOUT=10

# Mining Reward Configuration
# AP awarded per ADVC (default: 100 AP per 1 ADVC)
AP_PER_ADVC=100
# Minimum payout delta to trigger reward (in ADVC)
MIN_PAYOUT_DELTA=0.0001

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Pool Configurations
# CPU Pool
CPU_POOL_ENABLED=true
CPU_POOL_URL=http://cpu-pool.com/api/worker_stats

# Rplant Pool
RPLANT_ENABLED=true
RPLANT_URL=https://pool.rplant.xyz/api/walletEx/advc

# Zpool
ZPOOL_ENABLED=true
ZPOOL_URL=https://zpool.ca/api/walletEx

# BTC to ADVC conversion rate (for zpool which pays in BTC)
BTC_TO_ADVC_RATE=1000000
