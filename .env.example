# M2P Wallet Verification System - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///m2p.db
# For PostgreSQL: postgresql://user:password@localhost/m2p
# For MySQL: mysql://user:password@localhost/m2p

# Developer Wallet Address (REQUIRED)
DEV_WALLET_ADDRESS=your_actual_dev_wallet_address_here

# Verification Settings
VERIFICATION_TIMEOUT_HOURS=24
VERIFICATION_CHECK_INTERVAL_MINUTES=5
MIN_CONFIRMATIONS=6
AP_REFUND_MULTIPLIER=100

# ADVC Explorer Configuration
ADVC_EXPLORER_API=https://api.adventurecoin.quest
ADVC_EXPLORER_WEB=https://adventurecoin.quest

# Pool API Configuration
POOL_API_URL=https://cpu-pool.com/api

# API Request Timeout (seconds)
API_TIMEOUT=30

# Flask Configuration
SECRET_KEY=change_this_to_a_random_secret_key_in_production
PORT=5000

# WebSocket Configuration
SOCKETIO_MESSAGE_QUEUE=
SOCKETIO_ASYNC_MODE=threading

# Admin API Key (REQUIRED - change in production!)
ADMIN_API_KEY=change_this_to_a_secure_random_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/m2p/logs/verifier.log
