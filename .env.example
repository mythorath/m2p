# Flask Environment
FLASK_ENV=development
DEBUG=True
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/m2p

# Test Database (optional)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/m2p_test

# SQL Echo (set to True to see SQL queries in logs)
SQL_ECHO=False

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Developer Wallet Address for Donations
DEV_WALLET_ADDRESS=AdVcash_placeholder_wallet_address_here

# ADVC Explorer URL
ADVCASH_EXPLORER_URL=https://explorer.advcash.org

# API Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/m2p.log

# Session Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS

# Server Settings
HOST=0.0.0.0
PORT=5000
